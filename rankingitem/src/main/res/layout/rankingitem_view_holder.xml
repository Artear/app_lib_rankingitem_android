<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rankingItemTitle"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="105dp"
        tools:padding="21dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rankingItemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|top"
        app:layout_constraintLeft_toRightOf="@id/rankingItemTitle"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_height="105dp"
        tools:padding="21dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/background_dark"
        app:layout_constraintTop_toBottomOf="@id/rankingItemDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>